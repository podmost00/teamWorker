        android:id="@+id/info_task_time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Час початку"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/info_task_time_endTXT"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Час завершення"
        android:paddingBottom="8dp"/>
    <TextView
        android:id="@+id/info_task_time_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Час завершення"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/info_task_descriptionTXT"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Опис"
        android:paddingBottom="8dp"/>
    <TextView
        android:id="@+id/info_task_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Опис"
        android:paddingBottom="8dp"/>


</LinearLayout>
