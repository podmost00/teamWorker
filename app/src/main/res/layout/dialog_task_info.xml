        android:id="@+id/info_task_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Термін виконання"
        android:paddingBottom="8dp"/>


    <TextView
        android:id="@+id/info_task_last_editTXT"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Остання зміна"
        android:paddingBottom="8dp"/>
    <TextView
        android:id="@+id/info_task_last_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Остання зміна"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/info_task_time_startTXT"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Час початку"
        android:paddingBottom="8dp"/>
