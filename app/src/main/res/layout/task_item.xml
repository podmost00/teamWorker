<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/task_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Task Name"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/task_priority"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="High"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_name"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/task_assignee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Assignee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_priority"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/task_due_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Due Time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_assignee"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/task_project_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Project Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_due_time"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
